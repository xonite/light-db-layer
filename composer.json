{
  "name": "xonite/light-db-layer",
  "type": "library",
  "description": "Lightweight php database abstraction layer to work closer to real data.",
  "minimum-stability": "stable",
  "keywords": ["db", "dbal", "mysql"],
  "license": "MIT",
  "authors": [
    {
      "name": "Dawid Wengrzik",
      "email": "dawid.wengrzik@xonite.pl",
      "homepage": "http://xonite.pl",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.0",
    "doctrine/dbal": "^2.10",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "LightDBLayer\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2"
  },
  "autoload-dev": {
    "psr-4": {
      "LightDBLayer\\Tests\\": "tests/"
    }
  }
}
